<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    >

    <TextView
        android:id="@+id/tvReadHistoryItemAuthor"
        style="@style/text_color_primary_alpha_65_14"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReadHistoryItemDate"
        style="@style/text_color_primary_alpha_65_12"
        android:text="1小时前"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/tvReadHistoryItemAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvReadHistoryItemAuthor" />

    <TextView
        android:id="@+id/tvReadHistoryItemContent"
        style="@style/text_color_primary_alpha_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="这是一个根据MVPArms框架开发玩Android的一个APP，仅供个人使用，禁止商用"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReadHistoryItemAuthor" />

    <View
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReadHistoryItemContent" />


</androidx.constraintlayout.widget.ConstraintLayout>